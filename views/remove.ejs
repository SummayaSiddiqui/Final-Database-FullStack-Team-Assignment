<%- include('partials/header') %>
<main>
  <div class="logout-container">
    <h1>Remove a user</h1>
    <p>Are you sure you want to ban <strong><%= username %></strong>?</p>
    <form action="/logout" method="POST">
      <button
        type="submit"
        style="background-color: rgb(202, 12, 12)"
        class="logout-button"
      >
        Yes, Remove User
      </button>
    </form>
    <a href="/dashboard" class="cancel-link">Cancel</a>
  </div>
</main>
<%- include('partials/footer') %>
